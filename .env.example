# Chalk Fitness App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@host:port/database_name"
DB_PASSWORD="your_secure_database_password"

# Authentication (Clerk)
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key_here"
VITE_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key_here"

# API Configuration
VITE_API_URL="http://localhost:3000"  # Development
# VITE_API_URL="https://your-backend-url.com"  # Production

# Application Settings
NODE_ENV="development"  # or "production"
PORT="3000"

# CORS Settings (Production)
# CORS_ORIGIN="https://your-frontend-domain.com"

# Optional: Analytics and Monitoring
# SENTRY_DSN="your_sentry_dsn_here"
# POSTHOG_API_KEY="your_posthog_key_here"

# Optional: Email Service (for notifications)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your_email@gmail.com"
# SMTP_PASS="your_app_password"

# Optional: File Storage (for profile pictures, etc.)
# AWS_ACCESS_KEY_ID="your_aws_access_key"
# AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
# AWS_S3_BUCKET="your_s3_bucket_name"
# AWS_REGION="us-east-1"
